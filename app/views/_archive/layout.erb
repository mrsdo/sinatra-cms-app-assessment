<body>
  <div class="wrapper">
    <nav>
          <% if signed_in? %>

            <button><a href="/listings/new"> Create New Listing </a></button>
            <button><a href="/signout"> Sign-Out </a></button>
            <button><a href="/users/<%=current_user.id %>"> Edit-Profile </a></button>
            <button><a href="/listings"> Show-My-Listings </a></button>
            <p>Welcome, <strong><%=current_user.fname.upcase %></strong></p>

          <% else %>
            <button><a href="/signup">Sign-Up</a></button>
            <button><a href="/signin"> Sign-In </a></button>
          <%end %>

        </nav>
      <%= yield %>

    <footer class="branding">
      <small>&copy; 2021 <strong>Sinatra Listings Manager</strong></small>
    </footer>
